<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\__Shared\Shared.targets" Label="Shared" />
  
  <PropertyGroup>
    <PackageId>Mime-Detective</PackageId>
    <Description>The ultimate file-extension &amp; mime-type library.  Quickly detect the extension/mime-type of a file or stream using a library of up to 14,000+ signatures using magic numbers (also known as file headers) and magic words.  Also, easily convert between file extensions and mime types.</Description>
    <PackageReleaseNotes>A default signature pack is included.  Mime-Detective.Definitions.Exhaustive is required to leverage the full set of 14,000+ signatures.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Collections.Immutable" Version="5.0.0" />
    <PackageReference Include="System.Text.Json" Version="5.0.2" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
    <Compile Remove="__Compatibility\Array.cs" />
    <Compile Remove="__Compatibility\Convert.cs" />
    <Compile Remove="__Compatibility\Index.cs" />
    <Compile Remove="__Compatibility\IsExternalInit.cs" />
    <Compile Remove="__Compatibility\Range.cs" />
    <Compile Remove="__Compatibility\RuntimeHelpers.cs" />
  </ItemGroup>

  


</Project>
